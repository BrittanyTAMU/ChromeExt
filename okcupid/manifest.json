{
  "manifest_version": 3,
  "name": "Familiar for OkCupid",
  "version": "1.0.0",
  "description": "Face matching extension for OkCupid dating platform",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://okcupid.com/*",
    "https://*.okcupid.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://okcupid.com/*", "https://*.okcupid.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Familiar for OkCupid"
  },
  "web_accessible_resources": [
    {
      "resources": ["human.esm.js", "email.min.js"],
      "matches": ["https://okcupid.com/*", "https://*.okcupid.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 