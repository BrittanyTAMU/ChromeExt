{
  "manifest_version": 3,
  "name": "MatchGuard for Bumble",
  "version": "1.0.0",
  "description": "Face matching extension for Bumble dating platform",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://bumble.com/*",
    "https://*.bumble.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://bumble.com/*", "https://*.bumble.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "MatchGuard for Bumble"
  },
  "web_accessible_resources": [
    {
      "resources": ["human.esm.js"],
      "matches": ["https://bumble.com/*", "https://*.bumble.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 